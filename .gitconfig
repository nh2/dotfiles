[include]
  # For username / creds / etc
  path = ~/.gitconfig.private

[user]
  name = Niklas HambÃ¼chen
  email = mail@nh2.me
[color]
  ui = auto
  interactive = auto
[diff]
  tool = meld
[difftool "meld"]
  path = /home/niklas/src/meld/git/bin/meld
[merge]
  tool = meld
[mergetool "meld"]
  path = /home/niklas/src/meld/git/bin/meld
  trustExitCode = false
[alias]
  st = status
  ci = commit
  co = checkout
  goodpull = pull --rebase
  staged = diff --cached
  unstaged = diff
  both = diff HEAD
  oneline = log --pretty=oneline
  amend = commit --amend
  d = diff
  p = add -p
  sp = stash --patch
  serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
  meld = !$HOME/src/git-meld/git-meld.pl
  fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
  squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
  ri = rebase --interactive --autosquash
  whitespaceremove = !sh -c 'git stash && git stash apply && git diff -w > git-whitespace.patch && git checkout . && git apply git-whitespace.patch && rm git-whitespace.patch'
[branch]
  autosetuprebase = always
[core]
  excludesfile = /home/niklas/.gitignore_global
[rerere]
  enabled = true
